<%- post_decorator = PostDecorator.new(@post) %>
<div class="posts-container">
    <h1>Post details</h1>
    <div class="card h-100 w-100" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title"><%= post_decorator.note_date %> </h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= post_decorator.city %> <%=  post_decorator.temperature %></h6>
            <p class="card-text"><%= post_decorator.note %></p>
        </div>
    </div>
    <br>
    <div class="d-grid gap-2">
        <%= link_to "Back", posts_path, class: "btn btn-primary" %>
    </div>
</div>