<%= render partial: 'shared/errors', locals: {object: @form} %>
<%= form_with url: action_path, method: action_method, local: true do |f| %>
    <div class="form">
        <div class="form-group">
            <%= f.label :city, 'City' %>
            <%= f.text_field :city, value: @form&.city || @form&.post&.city, class: 'form-control', required: true %>
        </div>
        <div class="form-group">
            <%= f.label :note, 'Note' %>
            <%= f.text_area :note, value: @form&.note || @form&.post&.note, class: 'form-control', required: true %>
        </div>
    </div>
    <br>
    <div class="d-grid gap-2">
        <%= f.submit button_name, class: 'btn btn-primary' %>
    </div>
<% end %>